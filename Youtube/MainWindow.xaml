<Window x:Class="Youtube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>

        <TextBlock  TextAlignment="Center" Padding="10" FontSize="30">Youtube MP3 converter</TextBlock>
        <TextBox x:Name="link" Width="300" Height="50" ></TextBox>
        <Button Grid.Row="1" Width="200" Height="30" x:Name="Download" Content="Download" Click="Download_Click"></Button>
    </Grid>
</Window>
